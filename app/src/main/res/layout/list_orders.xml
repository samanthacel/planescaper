<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/rounded"
    android:backgroundTint="@color/white"
    android:layout_marginBottom="12dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/orderPlaceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bromo Mountain"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderDateTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="1 August 2025 - 5 August 2025"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/calendar"
        app:layout_constraintTop_toBottomOf="@+id/orderPlaceTV" />

    <ImageView android:id="@+id/calendar"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderPlaceTV"
        app:srcCompat="@drawable/icon_calendar" />

    <ImageView
        android:id="@+id/person"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar"
        app:srcCompat="@drawable/icon_person" />

    <TextView
        android:id="@+id/orderPersonTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="2 person"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/calendar"
        app:layout_constraintTop_toBottomOf="@+id/calendar" />

    <TextView
        android:id="@+id/orderPriceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TOTAL = Rp2.500.000,-"
        android:textColor="@color/mainBlue"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/person" />

    <Button
        android:id="@+id/orderDetailBtn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="See Details"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>