<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tourDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_home"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/detailBackBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/icon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/detailTitleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="86dp"
        android:fontFamily="@font/bold"
        android:text="Tour Detail"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/detailSV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:id="@+id/detailLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/detailPlaceIV"
                    android:layout_width="240dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/place_bromo" />

                <TextView
                    android:id="@+id/detailPlaceTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/bold"
                    android:text="Mount Bromo"
                    android:textColor="@color/black"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/detailLocationTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="East Java, Indonesia"
                    android:textColor="@color/medGray"
                    android:textSize="14dp" />

                <LinearLayout
                    android:id="@+id/detailDateLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/calendar"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/icon_calendar" />

                    <TextView
                        android:id="@+id/detailDateTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="1 August 2025 - 5 August 2025"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detailHotelLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="1dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/icon_hotel"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/detailHotelTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Plataran Bromo Hotel"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detailPlaneLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="1dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/icon_plane"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/detailPlaneTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Air Asia"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detailGuideLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="1dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/icon_tourguide"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/detailGuideTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Adi Nugroho"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:text="Itinerary"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/detailDescTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Day 1 : ..."
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <View
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/medGray" />

                <LinearLayout
                    android:id="@+id/detailPersonLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="1dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/icon_person"
                        app:tint="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Person"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView android:id="@+id/detailMinBtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="centerCrop"
                        android:layout_marginStart="148dp"
                        app:srcCompat="@drawable/icon_minus"
                        app:tint="@color/black" />

                    <TextView android:id="@+id/detailPersonTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <ImageView android:id="@+id/detailPlusBtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="12dp"
                        app:srcCompat="@drawable/icon_plus"
                        app:tint="@color/black" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Price Details"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Package Price"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView android:id="@+id/detailTourpriceTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2.500.000"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service Tax (1.2%)"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView android:id="@+id/detailTaxTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="300.000"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Per person"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView android:id="@+id/detailPersonPriceTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2.800.000"
                        android:fontFamily="@font/semibold"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOTAL"
                        android:fontFamily="@font/extrabold"
                        android:textColor="@color/mainBlue"
                        android:textSize="20dp" />

                    <TextView android:id="@+id/detailTotalPriceTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5.600.000"
                        android:fontFamily="@font/extrabold"
                        android:textAlignment="textEnd"
                        android:textColor="@color/mainBlue"
                        android:textSize="20dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/detailBookBtn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="BOOK"
                    android:fontFamily="@font/bold"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded"
                    android:backgroundTint="@color/yellow"
                    android:layout_marginTop="16dp"
                    android:textAllCaps="false"
                    />
            </LinearLayout>
        </FrameLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>